- content_for :header do
  = render 'default_header'

#jobs
  %nav.row
    = form_tag search_jobs_path, method: :get do
      .input-group.col-md-5
        %span.input-group-addon
          %icon.icon-search
        = text_field_tag :term, nil, class: 'form-control', placeholder: "Search: 'atlanta', 'full time', 'design'..."
    .col-md-4.col-md-offset-3
      = link_to 'Post a job: $400 for 30 days', '#', class: 'post_job btn btn-success btn-block'

  #list.row
    .category.col-md-12
      %h3.tk-goudy-bookletter-1911 Nursing Jobs
