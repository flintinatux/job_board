.panel.panel-default
  .panel-heading
    %h4.panel-title.pull-right
      = link_to '#', target: '_blank', title: 'View', data: { toggle: :tooltip } do
        %icon.icon-eye-open
      = link_to edit_board_path(board), title: 'Edit', data: { toggle: :tooltip } do
        %icon.icon-pencil
      = link_to board, method: :delete, remote: true, title: 'Delete', data: { toggle: :tooltip, confirm: 'Are you sure you want to delete this board? You will permanently lose all categories and jobs associated with it.' } do
        %icon.icon-trash
    %h4.panel-title
      %a{ href: "##{board.to_param}", data: { toggle: :collapse, parent: '#board_list' } }
        %icon{ class: board.icon }
        = board.title
  .panel-collapse.collapse{ id: board.to_param }
    .panel-body
      = board.tagline
    %ul.list-group
      = render board.categories
      %li.list-group-item
        = link_to new_board_category_path(board) do
          %icon.icon-plus
          Add a category
